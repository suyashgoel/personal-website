    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2020",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
